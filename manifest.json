{
    "manifest_version": 2,
    "name": "secure mail",
    "description": "A basic Hello World example extension!",
    "version": "0.1",
    "author": "uicoshpi",
    "browser_specific_settings": {
        "gecko": {
            "id": "rostro15@pm.me",
            "strict_min_version": "78.0"
        }
    },
    "permissions": [
        "messagesRead"
    ],
    "background": {
        "scripts": [
          "background.js"
        ]
      },
      "message_display_action": {
        "default_icon": "ico.svg",
        "default_title": "error",
        "default_popup": "test.txt"
      },
    "icons": {
        "64": "ico.svg",
        "32": "ico.svg",
        "16": "ico.svg"
    }
}
